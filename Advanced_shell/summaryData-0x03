#!/bin/bash

# Output CSV file
output_csv="pokemon_report.csv"

# Write header
echo "Name,Height(m),Weight(kg)" > "$output_csv"

# Loop through all JSON files in the current directory
for file in *.json; do
    if [ -f "$file" ]; then
        name=$(jq -r '.name' "$file")
        height=$(jq -r '.height' "$file")
        weight=$(jq -r '.weight' "$file")

        # Convert height (decimetres to metres) and weight (hectograms to kg)
        height_m=$(awk -v h="$height" 'BEGIN { printf "%.2f", h/10 }')
        weight_kg=$(awk -v w="$weight" 'BEGIN { printf "%.2f", w/10 }')

        echo "$name,$height_m,$weight_kg" >> "$output_csv"
    fi
done

# Calculate average height and weight
echo "" >> "$output_csv"
awk -F, 'NR>1 && NF==3 { total_height += $2; total_weight += $3; count++ }
END { if (count > 0) printf "Average,%.2f,%.2f\n", total_height/count, total_weight/count }' "$output_csv" >> "$output_csv"

echo "Report generated: $output_csv"
